---
import Link from '@/components/Link.astro'
import { useTranslations } from '@/i18n'
import RootLayout from '@/layouts/RootLayout.astro'

const t = useTranslations()
---

<RootLayout title="Not Found" description="Page not found">
  <div
    class="flex flex-col items-start justify-start md:flex-row md:items-center md:justify-center md:space-x-6"
  >
    <div class="space-x-2 pb-8 pt-6 md:space-y-5">
      <h2
        class="text-6xl font-extrabold leading-9 tracking-tight border-gray-900 dark:border-gray-100 md:border-r-2 md:px-6 md:text-8xl md:leading-14"
      >
        404
      </h2>
    </div>
    <div class="max-w-md text-gray-900 dark:text-gray-100">
      <p class="mb-4 text-xl font-bold leading-normal md:text-2xl">
        {t('pages.404.title')}
      </p>
      <p class="mb-8 prose dark:prose-invert">{t('pages.404.description')}</p>
      <Link
        href="/"
        class="focus:shadow-outline-blue inline rounded-lg border border-transparent text-gray-50 dark:text-gray-950 bg-primary-600 hover:bg-primary-800 dark:hover:bg-primary-500 px-4 py-2 text-sm font-medium leading-5 focus:outline-none"
      >
        {t('pages.404.backToHome')}
      </Link>
    </div>
  </div>
</RootLayout>
