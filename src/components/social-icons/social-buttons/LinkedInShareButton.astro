---
import LinkedinIcon from '../icons/Linkedin.astro'

const URL = `https://www.linkedin.com/sharing/share-offsite/?url=${Astro.request.url}`
---

<a
  class="social-share-btn"
  target="_blank"
  href={URL}
  rel="noopener noreferrer"
>
  <LinkedinIcon />
</a>

<style>
  a {
    margin-right: 10px;
  }
  svg:hover {
    fill: #0a66c2;
  }
</style>
